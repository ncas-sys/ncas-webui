				div Fans On
			li(ng-click="InterfaceCtrl.Command('FansOff', null)")
				i(class="fa fa-lightbulb-o")
				div Fans Off
			li
			li
			li
			li
			li(ng-click="InterfaceCtrl.showMacros=false")
				i(class="fa fa-home")
				div Back


